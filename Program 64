#include <stdio.h>
#include <math.h>

// Define a structure to represent a point
struct Point {
    float x;
    float y;
};

// Function to calculate the distance between two points
float calculateDistance(struct Point p1, struct Point p2) {
    return sqrt(pow(p2.x - p1.x, 2) + pow(p2.y - p1.y, 2));
}

int main() {
    struct Point point1, point2;
    float distance;

    // Input the coordinates of the first point
    printf("Enter the coordinates of the first point (x y): ");
    scanf("%f %f", &point1.x, &point1.y);

    // Input the coordinates of the second point
    printf("Enter the coordinates of the second point (x y): ");
    scanf("%f %f", &point2.x, &point2.y);

    // Calculate the distance between the two points
    distance = calculateDistance(point1, point2);

    // Display the result
    printf("The distance between the two points is: %.2f\n", distance);

    return 0;
}
